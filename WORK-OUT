          </div>

          {/* Bottom Footer */}
          <div className="pt-8 border-t border-white/20 text-center md:text-left">
            <p className="text-xs md:text-sm opacity-80">
              Â© 2024 Fit Tracker Pro. All rights reserved.
            </p>
          </div>
        </div>
      </footer>
    </div>
  );
